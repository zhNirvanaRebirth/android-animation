<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/auto_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AutoAnimation"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/transition_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TransitionAnimation"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/custom_transition_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CustomTransitionAnimation"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/slide_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SlideViewPager"
        android:layout_marginTop="20dp"/>

</LinearLayout>