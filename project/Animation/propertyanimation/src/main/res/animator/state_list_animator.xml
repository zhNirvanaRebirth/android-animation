<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueType="floatType" android:valueTo="1.5" android:duration="@android:integer/config_shortAnimTime" />
            <objectAnimator android:propertyName="scaleY" android:valueType="floatType" android:valueTo="1.5" android:duration="@android:integer/config_shortAnimTime" />
        </set>
    </item>

    <item android:state_pressed="false">
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueType="floatType" android:valueTo="1" android:duration="@android:integer/config_shortAnimTime" />
            <objectAnimator android:propertyName="scaleY" android:valueType="floatType" android:valueTo="1" android:duration="@android:integer/config_shortAnimTime" />
        </set>
    </item>
</selector>